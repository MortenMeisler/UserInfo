<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
	  <LangVersion>latest</LangVersion>
	  <Nullable>enable</Nullable>
	  <Version>1.0.2</Version>
	  <Authors>Morten Meisler</Authors>
	  <PackageProjectUrl>https://github.com/MortenMeisler/UserInfo</PackageProjectUrl>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <GenerateDocumentationFile>true</GenerateDocumentationFile>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageId>Graph.UserInfo</PackageId>
	  <Description>This is a light-weight Microsoft Graph wrapper for simple retrieving Azure AD Users using the most optimal approach in terms of filtering, batching and caching.</Description>
	  <UserSecretsId>1ce1ea5a-9286-411a-b225-7f312f5cd31a</UserSecretsId>
  </PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Azure.Identity" Version="1.6.0" />
		<PackageReference Include="LazyCache.AspNetCore" Version="2.4.0" />
		<PackageReference Include="Microsoft.Azure.Services.AppAuthentication" Version="1.6.2" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Graph" Version="4.22.0" />
		<PackageReference Include="Microsoft.Identity.Client.Extensions.Msal" Version="2.19.6" />
		<PackageReference Include="Polly" Version="7.2.3" />
	</ItemGroup>
</Project>
